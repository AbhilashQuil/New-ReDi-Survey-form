{
  "display": "form",
  "components": [
    {
      "type": "content",
      "html": "<h3>Welcome &lt;&lt;name&gt;&gt; to ReDi!</h3><p>Please answer a few questions to determine the right assessment.</p>"
    },
    {
      "type": "select",
      "key": "yearsBand",
      "label": "Total years of experience",
      "widget": "choicesjs",
      "data": {
        "values": [
          {
            "label": "0-2 years",
            "value": "0-2"
          },
          {
            "label": "3-5 years",
            "value": "3-5"
          },
          {
            "label": "6-9 years",
            "value": "6-9"
          },
          {
            "label": "10+ years",
            "value": "10+"
          }
        ]
      },
      "validate": {
        "required": true
      },
      "input": true
    },
    {
      "type": "button",
      "action": "submit",
      "label": "Next",
      "theme": "primary"
    }
  ]
}